<mvc:View xmlns:unified="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:internal="sap.landvisz.internal"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:sv="sap.ui.comp.smartvariants"
  xmlns:smartTable="sap.ui.comp.smarttable"
  xmlns:f="sap.f"
  xmlns:u="sap.ui.unified"
  xmlns:sf="sap.ui.comp.smartfilterbar" controllerName="rahul.controller.View1" displayBlock="true">
  <Page id="page" title="{i18n>title.CostCenterReport}" class="sapUiMediumMarginBegin" enableScrolling="false" showHeader="true">
  
    <content>
      <f:DynamicPage id="idDynamicPage" headerPinned="true"  headerExpanded="true" fitContent="true">
            
        <f:header>
          <f:DynamicPageHeader>
            <sf:SmartFilterBar id="sfDemo" showClearOnFB="true" filterContainerWidth="15.22em" entitySet="Y24_C_TEST" enableBasicSearch="true" persistencyKey="SmartFilter_Explored">
              <sf:controlConfiguration>
                <sf:ControlConfiguration id="sfProduct" change="onProductFilterChange"  visibleInAdvancedArea="true" key="product_nm"></sf:ControlConfiguration>
                <sf:ControlConfiguration id="sfCusttomer" visibleInAdvancedArea="true" key="customer_nm"></sf:ControlConfiguration>
              </sf:controlConfiguration>
            </sf:SmartFilterBar>
            
          </f:DynamicPageHeader>
        </f:header>
        <f:content>
          <smartTable:SmartTable width="100%" initiallyVisible="product_id"  smartFilterId="sfDemo"
           fitContainer="true" persistencyKey="SmartTableAnalytical_Explored" 
           tableType="ResponsiveTable" header="Smart Table" enableAutoBinding="true"
            id="stDemo" entitySet="Y24_C_TEST"  placeToolbarInTable="true" >
            <smartTable:customToolbar>
              <OverflowToolbar id="sttbDemo">
                <ToolbarSpacer id="sttbsDemo"/>
                <Button id="btnDelete" press="onPressDelete" type="Emphasized" icon="sap-icon://delete"/>
                <Button id="btnCreate" press="onPressCreate" type="Emphasized" text="Create"/>
                <u:FileUploader  buttonOnly="true" change="onChagnefupl"  buttonText="Excel Upload"></u:FileUploader>
              </OverflowToolbar>
            </smartTable:customToolbar>
            <Table id="stTable" mode="MultiSelect"  growing="true" growingScrollToLoad="false" sticky="ColumnHeaders,HeaderToolbar">
              <items >
                <ColumnListItem type="Navigation"  press="onItemPress" >
                </ColumnListItem>
              </items>
            </Table>
          </smartTable:SmartTable>
        </f:content>
      </f:DynamicPage>
    </content>
  </Page>
</mvc:View>